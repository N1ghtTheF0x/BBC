{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "H:/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "src/*.cpp",
                "-o",
                "bin/game.exe",
                "-IH:/SFML/include",
                "-LH:/SFML/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc",
            "group": "build"
        }
    ]
}